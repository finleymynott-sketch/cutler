{
  "name": "atlas-landing",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:serve": "http-server -p 5173 -c-1 .",
    "serve:py": "python3 -m http.server 5173 --bind 127.0.0.1",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:update": "playwright test --update-snapshots",
    "self-test": "start-server-and-test dev:serve http://127.0.0.1:5173 playwright test",
    "report": "playwright show-report",
    "perf": "node scripts/lighthouse.mjs",
    "a11y": "playwright test tests/a11y.spec.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.46.0",
    "http-server": "^14.1.1",
    "lighthouse": "^12.0.0",
    "chrome-launcher": "^1.0.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "^5.4.0"
  }
}


